/* Weather App Styles */
.app {
  max-width: 1200px;
  margin: 0 auto;
  padding: 1rem;
}

.app-header {
  margin-bottom: 2rem;
}

.app-header h1 {
  font-size: 2.5rem;
  margin-bottom: 1rem;
  color: #2c3e50;
}

.search-bar {
  display: flex;
  gap: 0.5rem;
  max-width: 600px;
  margin: 0 auto;
}

.search-input {
  flex: 1;
  padding: 0.75rem;
  border: 1px solid #ddd;
  border-radius: 0.5rem;
  font-size: 1rem;
}

.search-button {
  padding: 0.75rem 1.5rem;
  background: #3498db;
  color: white;
  border: none;
  border-radius: 0.5rem;
  cursor: pointer;
  font-size: 1rem;
}

.search-button:hover:not(:disabled) {
  background: #2980b9;
}

.search-button:disabled {
  background: #bdc3c7;
  cursor: not-allowed;
}

.app-main {
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.summary-section {
  margin-bottom: 2rem;
}

.city-header {
  background: white;
  border-radius: 1rem;
  padding: 2rem;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  text-align: center;
}

.city-header h2 {
  margin: 0 0 0.5rem 0;
  color: #2c3e50;
  font-size: 1.8rem;
}

.city-header p {
  margin: 0;
  color: #6c757d;
  font-size: 0.9rem;
}

/* Summary Card Styles */
.summary-card {
  background: white;
  border-radius: 1rem;
  padding: 2rem;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  text-align: left;
  margin-bottom: 2rem;
}

.summary-card.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 200px;
}

.summary-card.empty {
  text-align: center;
  color: #6c757d;
}

.loading-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1rem;
  color: #6c757d;
}

.spinner {
  width: 32px;
  height: 32px;
  border: 3px solid #f3f3f3;
  border-top: 3px solid #3498db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.empty-message h2 {
  margin-bottom: 0.5rem;
  color: #34495e;
}

.empty-message p {
  margin: 0;
  color: #6c757d;
}

.summary-header {
  margin-bottom: 2rem;
}

.summary-header h2 {
  margin: 0 0 0.5rem 0;
  color: #2c3e50;
  font-size: 1.5rem;
}

.summary-timeframe {
  margin: 0;
  color: #6c757d;
  font-size: 0.9rem;
}

.summary-content {
  display: grid;
  gap: 2rem;
}

.section-title {
  margin: 0 0 1rem 0;
  color: #34495e;
  font-size: 1.1rem;
  font-weight: 600;
}

.current-grid,
.outlook-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
  gap: 1rem;
}

@media (max-width: 768px) {
  .outlook-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

.current-item,
.outlook-item {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.current-item .label,
.outlook-item .label {
  font-size: 0.8rem;
  color: #6c757d;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  font-weight: 500;
}

.current-item .value,
.outlook-item .value {
  font-size: 1.2rem;
  font-weight: 600;
  color: #2c3e50;
}

.temperature-value {
  color: #e74c3c !important;
}

.feels-like-value {
  color: #f39c12 !important;
}

.precipitation-value,
.max-precip-value {
  color: #3498db !important;
}

.wind-value {
  color: #27ae60 !important;
}

.uv-value {
  color: #f39c12 !important;
}

.temp-range-value {
  color: #8e44ad !important;
}

.summary-footer {
  margin-top: 2rem;
  padding-top: 1rem;
  border-top: 1px solid #ecf0f1;
}

.data-note {
  margin: 0;
  font-size: 0.8rem;
  color: #6c757d;
  text-align: center;
  font-style: italic;
}

/* Weather Alert Styles */
.alert-badge {
  margin-bottom: 1.5rem;
  border-radius: 0.5rem;
  padding: 1rem;
  border-left: 4px solid;
}

.alert-severe {
  background-color: #fef2f2;
  border-left-color: #dc2626;
  color: #7f1d1d;
}

.alert-moderate {
  background-color: #fef3c7;
  border-left-color: #f59e0b;
  color: #92400e;
}

.alert-minor {
  background-color: #eff6ff;
  border-left-color: #3b82f6;
  color: #1e40af;
}

.alert-unknown {
  background-color: #f3f4f6;
  border-left-color: #6b7280;
  color: #374151;
}

.alert-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  cursor: pointer;
}

.alert-info {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.alert-title {
  font-weight: 600;
  font-size: 1rem;
  line-height: 1.4;
}

.alert-severity {
  font-size: 0.8rem;
  text-transform: uppercase;
  font-weight: 500;
  opacity: 0.8;
}

.alert-count {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-size: 0.9rem;
}

.expand-button {
  background: none;
  border: none;
  color: inherit;
  font-size: 0.8rem;
  cursor: pointer;
  padding: 0.25rem;
  border-radius: 0.25rem;
  transition: background-color 0.2s ease;
}

.expand-button:hover {
  background-color: rgba(0, 0, 0, 0.1);
}

.alert-details {
  margin-top: 1rem;
  padding-top: 1rem;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}

.alert-item {
  margin-bottom: 1rem;
  padding-bottom: 1rem;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
}

.alert-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.alert-item-title {
  margin: 0 0 0.5rem 0;
  font-size: 0.95rem;
  font-weight: 600;
}

.alert-item-severity {
  margin: 0 0 0.5rem 0;
  font-size: 0.8rem;
  font-weight: 500;
  opacity: 0.8;
}

.alert-item-description {
  margin: 0 0 0.75rem 0;
  font-size: 0.9rem;
  line-height: 1.4;
}

.alert-item-times {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
  font-size: 0.8rem;
  opacity: 0.7;
}

/* Forecast Chart Styles */
.forecast-chart {
  background: white;
  border-radius: 1rem;
  padding: 2rem;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  margin-bottom: 2rem;
}

.forecast-chart.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 400px;
}

.forecast-chart.empty {
  text-align: center;
  color: #6c757d;
  min-height: 300px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.chart-header {
  margin-bottom: 2rem;
}

.chart-header h3 {
  margin: 0 0 0.5rem 0;
  color: #2c3e50;
  font-size: 1.5rem;
}

.chart-description {
  margin: 0;
  color: #6c757d;
  font-size: 0.9rem;
}

.chart-container {
  position: relative;
  margin-bottom: 2rem;
  overflow-x: auto;
  border-radius: 0.5rem;
  background: #fafafa;
  padding: 1rem;
}

.forecast-svg {
  max-width: 100%;
  height: auto;
  display: block;
}

.temp-line {
  filter: drop-shadow(0 2px 4px rgba(239, 68, 68, 0.3));
}

.temp-point {
  transition: r 0.2s ease;
}

.temp-point:hover {
  r: 6;
  filter: drop-shadow(0 2px 4px rgba(239, 68, 68, 0.5));
}

.precip-bar {
  transition: opacity 0.2s ease;
}

.precip-bar:hover {
  opacity: 0.8 !important;
}

.time-label, .day-label, .axis-label {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  user-select: none;
}

.chart-tooltip {
  background: rgba(0, 0, 0, 0.9);
  color: white;
  padding: 0.75rem;
  border-radius: 0.5rem;
  font-size: 0.875rem;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  z-index: 10;
  margin-bottom: 0.5rem;
}

.tooltip-content {
  text-align: center;
  line-height: 1.4;
}

.tooltip-time {
  font-weight: 600;
  margin-bottom: 0.25rem;
}

.tooltip-temp {
  color: #fca5a5;
  margin-bottom: 0.125rem;
}

.tooltip-pop {
  color: #93c5fd;
}

.chart-controls {
  text-align: center;
  margin-bottom: 1.5rem;
}

.details-toggle {
  background: #3498db;
  color: white;
  border: none;
  padding: 0.75rem 1.5rem;
  border-radius: 0.5rem;
  cursor: pointer;
  font-size: 0.9rem;
  font-weight: 500;
  transition: background-color 0.2s ease;
}

.details-toggle:hover {
  background: #2980b9;
}

.details-toggle:focus {
  outline: 2px solid #3498db;
  outline-offset: 2px;
}

.details-section {
  border-top: 1px solid #ecf0f1;
  padding-top: 2rem;
}

.details-section h4 {
  margin: 0 0 1.5rem 0;
  color: #34495e;
  font-size: 1.1rem;
}

.details-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: 1rem;
  max-height: 400px;
  overflow-y: auto;
  padding-right: 0.5rem;
}

.details-grid::-webkit-scrollbar {
  width: 6px;
}

.details-grid::-webkit-scrollbar-track {
  background: #f1f1f1;
  border-radius: 3px;
}

.details-grid::-webkit-scrollbar-thumb {
  background: #c1c1c1;
  border-radius: 3px;
}

.details-grid::-webkit-scrollbar-thumb:hover {
  background: #a8a8a8;
}

.detail-item {
  background: #f8f9fa;
  border-radius: 0.5rem;
  padding: 1rem;
  border: 1px solid #e9ecef;
  transition: border-color 0.2s ease;
}

.detail-item:hover {
  border-color: #3498db;
}

.detail-time {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0.75rem;
  padding-bottom: 0.5rem;
  border-bottom: 1px solid #e9ecef;
}

.detail-time .time {
  font-weight: 600;
  color: #2c3e50;
  font-size: 1rem;
}

.detail-time .day {
  color: #6c757d;
  font-size: 0.85rem;
}

.detail-weather {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.temp-details, .precip-details, .other-details {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.temp-details .temp {
  font-weight: 600;
  color: #e74c3c;
  font-size: 1.1rem;
}

.temp-details .feels-like {
  color: #f39c12;
  font-size: 0.9rem;
}

.precip-details .pop {
  color: #3498db;
  font-weight: 500;
}

.precip-details .amount {
  color: #6c757d;
  font-size: 0.9rem;
}

.other-details .wind {
  color: #27ae60;
  font-size: 0.9rem;
}

.other-details .uv {
  color: #f39c12;
  font-size: 0.9rem;
}

.chart-footer {
  margin-top: 1.5rem;
  padding-top: 1rem;
  border-top: 1px solid #ecf0f1;
  text-align: center;
}

.chart-footer p {
  margin: 0;
  font-size: 0.85rem;
  color: #6c757d;
  font-style: italic;
}

/* Mobile responsiveness for chart */
@media (max-width: 768px) {
  .forecast-chart {
    padding: 1.5rem;
  }
  
  .chart-container {
    padding: 0.5rem;
  }
  
  .details-grid {
    grid-template-columns: 1fr;
    max-height: 300px;
  }
  
  .detail-item {
    padding: 0.75rem;
  }
  
  .chart-tooltip {
    font-size: 0.8rem;
    padding: 0.5rem;
  }
}

/* Hour List Styles */
.hour-list {
  background: white;
  border-radius: 1rem;
  padding: 2rem;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.hour-list.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 300px;
}

.hour-list.empty {
  text-align: center;
  color: #6c757d;
}

.hour-list-header {
  margin-bottom: 1.5rem;
}

.hour-list-header h2 {
  margin: 0 0 0.5rem 0;
  color: #2c3e50;
  font-size: 1.5rem;
}

.hour-list-description {
  margin: 0;
  color: #6c757d;
  font-size: 0.9rem;
}

.hours-container {
  max-height: 500px;
  overflow-y: auto;
  padding-right: 0.5rem;
}

.hours-container::-webkit-scrollbar {
  width: 6px;
}

.hours-container::-webkit-scrollbar-track {
  background: #f1f1f1;
  border-radius: 3px;
}

.hours-container::-webkit-scrollbar-thumb {
  background: #c1c1c1;
  border-radius: 3px;
}

.hours-container::-webkit-scrollbar-thumb:hover {
  background: #a8a8a8;
}

.hour-item {
  display: grid;
  grid-template-columns: 80px 1fr 80px 100px 80px 80px;
  gap: 1rem;
  align-items: center;
  padding: 1rem;
  border-bottom: 1px solid #ecf0f1;
  transition: background-color 0.2s ease;
}

.hour-item:hover {
  background-color: #f8f9fa;
}

.hour-item:last-child {
  border-bottom: none;
}

.hour-item:focus-within {
  background-color: #e3f2fd;
  outline: 2px solid #2196f3;
  outline-offset: -2px;
  border-radius: 0.5rem;
}

.hour-time {
  font-weight: 600;
  color: #2c3e50;
  font-size: 0.9rem;
}

.hour-temp {
  font-size: 1.1rem;
  font-weight: 600;
  color: #e74c3c;
}

.hour-precip {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.precip-prob {
  color: #3498db;
  font-weight: 500;
  font-size: 0.9rem;
}

.precip-amount {
  color: #6c757d;
  font-size: 0.8rem;
}

.hour-wind {
  color: #27ae60;
  font-weight: 500;
  font-size: 0.9rem;
}

.hour-uv {
  color: #f39c12;
  font-weight: 500;
  font-size: 0.9rem;
}

/* Mobile responsiveness */
@media (max-width: 768px) {
  .hour-item {
    grid-template-columns: 60px 1fr 60px;
    gap: 0.5rem;
    padding: 0.75rem;
  }
  
  .hour-precip,
  .hour-wind,
  .hour-uv {
    display: none;
  }
  
  .current-grid,
  .outlook-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .summary-content {
    gap: 1.5rem;
  }
}

.forecast-display {
  background: white;
  border-radius: 1rem;
  padding: 2rem;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.forecast-display h3 {
  margin-bottom: 1.5rem;
  color: #2c3e50;
}

.forecast-items {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
  gap: 1rem;
}

.forecast-item {
  background: #f8f9fa;
  border-radius: 0.5rem;
  padding: 1rem;
  text-align: center;
  border: 1px solid #e9ecef;
}

.forecast-item .time {
  font-weight: bold;
  margin-bottom: 0.5rem;
  color: #495057;
}

.forecast-item .temp {
  font-size: 1.5rem;
  font-weight: bold;
  color: #3498db;
  margin-bottom: 0.5rem;
}

.forecast-item .details {
  font-size: 0.85rem;
  color: #6c757d;
  line-height: 1.4;
}

.forecast-item .details div {
  margin-bottom: 0.25rem;
}

.forecast-note {
  margin-top: 1rem;
  text-align: center;
  color: #6c757d;
  font-style: italic;
}

.state-container {
  text-align: center;
  padding: 3rem;
  background: white;
  border-radius: 1rem;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.loading-state .spinner {
  width: 40px;
  height: 40px;
  border: 4px solid #f3f3f3;
  border-top: 4px solid #3498db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 1rem;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.error-state .error-icon {
  font-size: 3rem;
  margin-bottom: 1rem;
}

.empty-state .empty-icon {
  font-size: 3rem;
  margin-bottom: 1rem;
}

.retry-button, .action-button {
  background: #3498db;
  color: white;
  border: none;
  padding: 0.75rem 1.5rem;
  border-radius: 0.5rem;
  cursor: pointer;
  font-size: 1rem;
  margin-top: 1rem;
}

.retry-button:hover, .action-button:hover {
  background: #2980b9;
}

/* Responsive design */
@media (max-width: 768px) {
  .app {
    padding: 0.5rem;
  }
  
  .app-header h1 {
    font-size: 2rem;
  }
  
  .search-bar {
    flex-direction: column;
  }
  
  .forecast-items {
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    gap: 0.75rem;
  }
  
  .forecast-item {
    padding: 0.75rem;
  }
}
